# Environment Configuration for Compliant.one Platform

# Platform Configuration
PLATFORM_NAME=Compliant.one
PLATFORM_VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
API_HOST=localhost
API_PORT=8000
API_PREFIX=/api/v1

# Dashboard Configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_TITLE="Compliant.one - RegTech Platform"

# Database Configuration (Update with your actual database credentials)
DATABASE_URL=postgresql://username:password@localhost:5432/compliant_one
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/compliant_one

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Third-Party API Keys (Replace with actual keys)
WORLD_CHECK_API_KEY=your-world-check-api-key
DOW_JONES_API_KEY=your-dow-jones-api-key
LEXISNEXIS_API_KEY=your-lexisnexis-api-key
ACUANT_API_KEY=your-acuant-api-key
JUMIO_API_KEY=your-jumio-api-key
ONFIDO_API_KEY=your-onfido-api-key

# OSINT Configuration
OSINT_SOURCES_ENABLED=true
OSINT_MAX_RESULTS=100
OSINT_CACHE_TTL=3600

# KYC Configuration
KYC_RISK_THRESHOLD_LOW=30
KYC_RISK_THRESHOLD_MEDIUM=60
KYC_RISK_THRESHOLD_HIGH=80

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_LEVEL=INFO

# Threat Intelligence Configuration
# Have I Been Pwned API Key
# Get from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=your_hibp_api_key_here

# VirusTotal API Key
# Get from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Shodan API Key
# Get from: https://account.shodan.io/
SHODAN_API_KEY=your_shodan_api_key_here

# AlienVault OTX API Key (optional)
# Get from: https://otx.alienvault.com/settings
OTX_API_KEY=your_otx_api_key_here

# GreyNoise API Key (optional)
# Get from: https://viz.greynoise.io/account/api-key
GREYNOISE_API_KEY=your_greynoise_api_key_here

# Threat Feed Configuration
THREAT_FEED_UPDATE_INTERVAL=3600  # Update feeds every hour
THREAT_MAX_FEED_WORKERS=5
THREAT_FEED_TIMEOUT=30

# Rate Limiting Configuration
HIBP_RATE_LIMIT_DELAY=1.5  # Seconds between HIBP requests
VIRUSTOTAL_RATE_LIMIT_DELAY=15  # Seconds between VirusTotal requests (free tier)
SHODAN_RATE_LIMIT_DELAY=1  # Seconds between Shodan requests

# Alert Configuration
THREAT_ALERT_EMAIL_ENABLED=false
THREAT_ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
THREAT_ALERT_EMAIL_SMTP_PORT=587
THREAT_ALERT_EMAIL_USERNAME=your_email@gmail.com
THREAT_ALERT_EMAIL_PASSWORD=your_app_password
THREAT_ALERT_EMAIL_FROM=alerts@yourcompany.com
THREAT_ALERT_EMAIL_TO=security@yourcompany.com

# Threat Monitoring Configuration
THREAT_MONITORING_ENABLED=true
THREAT_MONITORING_INTERVAL=300  # Check targets every 5 minutes
THREAT_MAX_MONITORING_WORKERS=3

# Threat Intelligence Database
THREAT_DB_PATH=./data/threat_intelligence.db

# Compliance Configuration
FATF_COMPLIANCE_MODE=strict
GDPR_COMPLIANCE=true
AUDIT_LOGGING=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_ENABLED=true
CACHE_TTL=1800
